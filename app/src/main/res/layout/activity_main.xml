<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:id="@+id/main"
    android:padding="10dp">

    <!-- Trường nhập tên món ăn -->
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Name:"
        android:textSize="16sp"
        android:padding="5dp"/>

    <EditText
        android:id="@+id/etDishName"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Name"
        android:textSize="16sp"
        android:backgroundTint="@color/black"
        android:padding="10dp"/>

    <!-- Spinner chọn thumbnail -->
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Thumbnail:"
        android:textSize="16sp"
        android:padding="5dp"/>

    <Spinner
        android:id="@+id/spinnerThumbnails"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="5dp"
        android:layout_marginBottom="10dp"/>

    <!-- Checkbox chọn món có khuyến mãi hay không -->
    <CheckBox
        android:id="@+id/cbPromotion"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Promotion"
        android:layout_marginTop="10dp"/>

    <!-- Nút thêm món ăn -->
    <Button
        android:id="@+id/btnAddDish"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="ADD A NEW DISH"
        android:textAllCaps="false"
        android:textColor="@android:color/white"
        android:backgroundTint="@color/black"
        android:layout_marginTop="20dp"
        android:padding="12dp"
        android:layout_gravity="center_horizontal"/>

    <!-- GridView hiển thị danh sách món ăn -->
    <GridView
        android:id="@+id/gridView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:numColumns="2"
        android:verticalSpacing="10dp"
        android:horizontalSpacing="10dp"
        android:layout_marginTop="20dp"
        android:stretchMode="columnWidth"
        android:gravity="center"/>

</LinearLayout>
