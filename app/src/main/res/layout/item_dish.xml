<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:padding="5dp">

    <!-- Hình đại diện món ăn (thumbnail) -->
    <ImageView
        android:id="@+id/dishImage"
        android:layout_width="200dp"
        android:layout_height="200dp"
        android:scaleType="centerCrop"
        android:src="@drawable/default_thumbnail" />  <!-- Placeholder image -->

    <!-- Tên món ăn, đặt phía dưới bên trái của thumbnail -->
    <TextView
        android:id="@+id/dishName"
        android:layout_width="200dp"
        android:layout_height="30dp"
        android:layout_gravity="bottom|start"
        android:padding="4dp"
        android:text="Dish Name"
        android:textColor="@android:color/white"
        android:textSize="15sp"
        android:background="@android:color/black"
        android:alpha="0.7"
/>

    <!-- Ngôi sao khuyến mãi, đặt phía trên bên phải của thumbnail -->
    <ImageView
        android:id="@+id/promotionStar"
        android:layout_width="24dp"
        android:layout_height="24dp"
        android:layout_gravity="bottom|end"
        android:src="@drawable/star_icon"
        android:visibility="gone"
        android:layout_margin="4dp" />
</FrameLayout>
